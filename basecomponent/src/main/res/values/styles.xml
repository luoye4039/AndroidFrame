<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentBgDialog">
        <!-- <item name="android:windowAnimationStyle">@style/DialogAnim</item>-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@color/transparent</item>
    </style>

    <style name="HLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="VLineView">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
</resources>